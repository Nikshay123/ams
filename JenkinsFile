pipeline {
    agent any
    
    stages {
        stage('Restore') {
            steps {
                script {
                    sh 'dotnet restore WebApp.sln'
                }
            }
        }
        
        stage('Build') {
            steps {
                script {
                    sh 'dotnet build WebApp.sln --configuration Release --no-restore'
                }
            }
        }
        
        stage('Test') {
            steps {
                script {
                    sh 'dotnet test WebApp.sln --configuration Release --no-build'
                }
            }
        }
        
        stage('Publish') {
            steps {
                script {
                    sh 'dotnet publish WebApp.sln --configuration Release --no-restore --output ./publish'
                }
            }
        }
    }
    
    post {
        success {
            echo 'Pipeline completed successfully!'
        }
        failure {
            echo 'Pipeline failed. Check logs for details.'
        }
    }
}
