pipeline {
    agent any
    
    stages {
        stage('Checkout') {
            steps {
                checkout scm
            }
        }
        
        stage('Restore Dependencies') {
            steps {
                dir('WebApp') {
                    sh 'dotnet restore WebApp.sln'
                }
            }
        }
        
        stage('Build') {
            steps {
                dir('WebApp') {
                    sh 'dotnet build WebApp.sln --configuration Release'
                }
            }
        }
        
        stage('Test') {
            steps {
                dir('UnitTestsS') {
                    sh 'dotnet test --no-restore --configuration Release'
                }
            }
        }
        
        stage('Publish') {
            steps {
                dir('WebApp') {
                    sh 'dotnet publish WebApp.sln --no-restore --configuration Release --output ./publish'
                }
            }
        }
    }
    
    post {
        success {
            echo 'Pipeline completed successfully!'
        }
        failure {
            echo 'Pipeline failed. Check the logs for details.'
        }
    }
}
